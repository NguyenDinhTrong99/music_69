<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_4"
    >
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_layout"
            android:orientation="horizontal"
            android:background="@color/colorGrey200"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52" >
        </LinearLayout>
         <TextView
             android:id="@+id/txtTitleGenres"
             android:padding="@dimen/dp_8"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_alignStart="@+id/linear_layout"
             android:layout_marginStart="@dimen/dp_4"
             android:layout_marginTop="@dimen/dp_4"
             android:text="@string/title_country"
             android:textSize="@dimen/sp_20"
             android:textStyle="normal"
             style="@style/TitleText"
             />

         <TextView
             android:id="@+id/txtMore"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignEnd="@id/linear_layout"
             android:layout_alignParentTop="true"
             android:gravity="center|end"
             android:layout_marginTop="@dimen/dp_12"
             android:layout_marginEnd="@dimen/sp_12"
             android:layout_below="@id/linear_layout"
             android:text="@string/text_more"
             android:textAllCaps="false"
             android:textColor="@color/colorGrey400"
             android:textSize="@dimen/sp_16"
             />
         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/recyclerviewGenreType"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/dp_4"
             android:layout_marginTop="@dimen/dp_4"
             android:orientation="horizontal"
             app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
             android:layout_below="@id/linear_layout"
             android:layout_alignParentStart="true"
             android:layout_alignParentEnd="true"
             />
     </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
